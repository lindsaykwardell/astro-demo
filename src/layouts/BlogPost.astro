---
import { Markdown } from 'astro/components';
import BaseHead from '../components/BaseHead.astro';
import BlogHeader from '../components/BlogHeader.astro';
import BlogPost from '../components/BlogPost.astro';

const {content} = Astro.props;
const {title, snippet, publishDate, author, image, permalink, alt} = content;
---
<html lang={ content.lang || 'en' }>
  <head>
    <BaseHead title={title} description={snippet} permalink={permalink} />
    <link rel="stylesheet" href="/blog.css" />
  </head>

  <body>
    <BlogHeader />
    <BlogPost title={title} author={author} heroImage={image} publishDate={publishDate} alt={alt}>
      <slot />
    </BlogPost>
  </body>
</html>
  
